<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/platinum"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_profile_update_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="프로필을 업데이트 할 수 없습니다"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:visibility="gone" />


    <TextView
        android:id="@+id/textview_tier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.33"
        android:gravity="center"
        android:text="티어"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textview_tier_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.33"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textview_widget_profile_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.33"
        android:fontFamily="@font/gmarket_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="as00098"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="as00098" />

</LinearLayout>


